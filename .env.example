PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/edgestone_db?schema=public"

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d

# Zoho Mail Credentials
MAIL_USER="support@edgestone.in"
MAIL_PASSWORD="your_zoho_app_password"

# IMAP Configuration (Zoho – incoming mail)
IMAP_HOST="imappro.zoho.in"
IMAP_PORT=993
IMAP_SECURE=true

# SMTP Configuration (Zoho – outgoing mail, STARTTLS on 587)
SMTP_HOST="smtppro.zoho.in"
SMTP_PORT=587
SMTP_SECURE=false
